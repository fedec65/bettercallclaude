{
  "name": "@bettercallclaude/shared",
  "version": "2.0.0",
  "description": "Shared infrastructure for BetterCallClaude MCP servers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx tsc --watch",
    "test": "vitest run --exclude '**/benchmarks/**'",
    "test:benchmark": "vitest run --dir src/__tests__/benchmarks --testTimeout=60000",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "legal",
    "swiss-law",
    "mcp",
    "database",
    "api-client"
  ],
  "author": "BetterCallClaude Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "pg": "^8.11.0",
    "node-sqlite3-wasm": "^0.8.0",
    "sql.js": "^1.11.0",
    "typeorm": "^0.3.19",
    "p-retry": "^6.1.0",
    "bottleneck": "^2.19.5",
    "natural": "^6.10.0",
    "stopword": "^2.0.8",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.0",
    "@types/natural": "^5.1.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15",
    "nock": "^13.4.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
